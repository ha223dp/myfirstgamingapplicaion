<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forum">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:itemActiveIndicatorStyle="@style/App.Customer.Indicator"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/goBackForum"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:drawableTop="@drawable/baseline_arrow_back_24"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:drawableTop="@drawable/baseline_content_paste_search_24"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="Forum"
                android:textSize="30sp"
                tools:ignore="MissingConstraints" />

            <!-- First Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:isScrollContainer="false">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:padding="20dp"
                    android:text="Persona 3 är en resa som korsar gränserna mellan verklighet och även ..." />

                <ImageButton
                    android:id="@+id/imageButtonForum1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/header1"
                    />

            </androidx.cardview.widget.CardView>

            <!-- Second Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"

                android:isScrollContainer="false">


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginLeft="40dp"

                    android:text="Dark Souls 3 är det senaste tillskottet i den hyllade Dark Souls-spelserien utvecklad " />

                <ImageButton
                    android:id="@+id/imageButtonForum2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ofmeaw2khrdaezajw1f3tcixbogklptc"/>

            </androidx.cardview.widget.CardView>

            <!-- 3 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:isScrollContainer="false">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginLeft="40dp"

                    android:text="Tekken 8 kännetecknas av dess dynamiska och snabba fightingsystem. Spelarna kontrollerar" />

                <ImageButton
                    android:id="@+id/imageButtonForum3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/_4s9dovjzhha0oe8o8wax88s" />

            </androidx.cardview.widget.CardView>

            <!-- 3 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:isScrollContainer="false">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginLeft="40dp"

                    android:text="En central del av It Takes Two är att det är ett co-op-spel som måste spelas av två spelare. " />

                <ImageButton
                    android:id="@+id/imageButtonForum4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/egs_ittakestwo_hazelight_s2_1200x1600_5c82de2d2e21a841dd06ec27e082777e_1200x1600_5c82de2d2e21a841dd06ec27e082777e"  />

            </androidx.cardview.widget.CardView>

            <!-- 4 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:isScrollContainer="false">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginLeft="40dp"

                    android:text="Need for Speed: Most Wanted är en racingspelsklassiker som utvecklades av " />

                <ImageButton
                    android:id="@+id/imageButtonForum5"

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/_160avzio4s__ac_uf1000_1000_ql80_" />

            </androidx.cardview.widget.CardView>

            <!-- 4 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:isScrollContainer="false">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:padding="20dp"
                    android:text="Docka som försöker bli människa i ett souls like spel genom att besegra svåra bossar." />

                <ImageButton
                    android:id="@+id/imageButtonForum6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/liesofp_1702510493314"  />

            </androidx.cardview.widget.CardView>


            <!-- 4 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:isScrollContainer="false">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_marginLeft="40dp"

                    android:text="Arg far och tonårspojke försöker döda gudar för de blev kränkta och kämpa för deras mål att " />

                <ImageButton
                    android:id="@+id/imageButtonForum7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/_xj8xb3bi888qtlzydl7oi0s" />

            </androidx.cardview.widget.CardView>







        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

