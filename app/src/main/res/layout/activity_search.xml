<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".Search">



    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    app:itemActiveIndicatorStyle="@style/App.Customer.Indicator"
    app:itemIconSize="30dp"
    app:itemIconTint="@color/white"
    app:itemTextColor="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:menu="@menu/bottom_menu">

</com.google.android.material.bottomnavigation.BottomNavigationView>




    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="0dp"
            android:drawableTop="@drawable/baseline_content_paste_search_24"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Utforska"
            android:textSize="30sp"
            tools:ignore="MissingConstraints" />




        <!-- First Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="362dp"
            android:layout_height="240dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="13dp"
            android:isScrollContainer="false">


            <TextView
                android:id="@+id/textView_your_games2"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="40dp"
                android:text="High Fi Rush" />

            <VideoView
                android:id="@+id/xml_videoView1"
                android:layout_width="359dp"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="362dp"
            android:layout_height="240dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="13dp"
            android:isScrollContainer="false">


            <TextView
                android:id="@+id/textView_your_games3"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="40dp"
                android:text="God of war" />

            <VideoView
                android:id="@+id/xml_videoView2"
                android:layout_width="359dp"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:ignore="DuplicateIds" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="362dp"
            android:layout_height="240dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="13dp"
            android:isScrollContainer="false">


            <TextView
                android:id="@+id/textView_your_games4"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="40dp"
                android:text="Sekiro shadows dies twice" />

            <VideoView
                android:id="@+id/xml_videoView3"
                android:layout_width="359dp"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:ignore="DuplicateIds" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="362dp"
            android:layout_height="240dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="13dp"
            android:isScrollContainer="false">


            <TextView
                android:id="@+id/textView_your_games5"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="40dp"
                android:text="Lies of P" />

            <VideoView
                android:id="@+id/xml_videoView4"
                android:layout_width="359dp"
                android:layout_height="186dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:ignore="DuplicateIds" />


        </androidx.cardview.widget.CardView>





    </LinearLayout>



</ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>

