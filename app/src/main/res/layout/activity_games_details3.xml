<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YourGames"
    tools:ignore="MissingDefaultResource">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- First Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="573dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="13dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:isScrollContainer="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <ImageView
                    android:id="@+id/imageButton_your_games"
                    android:layout_width="400dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:drawableTop="@drawable/baseline_personprofil_24"
                    android:scaleType="fitCenter"
                    android:src="@drawable/_4s9dovjzhha0oe8o8wax88s" />

                <EditText
                    android:id="@+id/editTextId"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="40dp"
                    android:text="Tekken 8 kännetecknas av dess dynamiska och snabba fightingsystem. Spelarna kontrollerar olika karaktärer som använder olika kampsportstekniker och specialattacker för att besegra sina motståndare. Spelet kombinerar precision, timing och strategi för att vinna matcher."
                    android:textColor="@color/white" />



                <Button
                    android:id="@+id/goBackYour_Games"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:drawableTop="@drawable/baseline_arrow_back_24"
                    tools:ignore="MissingConstraints"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    />

                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom|center"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:transformPivotX="120dp"
                    android:transformPivotY="30dp"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/blue"
                    />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewGamesDetails"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="   "
                android:textSize="18sp"
                />



            <Button
                android:id="@+id/buttonGameDetail"
                android:layout_width="407dp"
                android:layout_height="67dp"
                android:text="Send in rating"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="649dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>



    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>

