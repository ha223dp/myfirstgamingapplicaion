<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourGames">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActivity">


        <FrameLayout
            android:id="@+id/gameFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toTopOf="@+id/friendsFrameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="50dp"
                android:text="Hens spel:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/gamesScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/_xj8xb3bi888qtlzydl7oi0s" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/_4s9dovjzhha0oe8o8wax88s"
                        tools:layout_editor_absoluteX="158dp"
                        tools:layout_editor_absoluteY="276dp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/liesofp_1702510493314" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/egs_ittakestwo_hazelight_s2_1200x1600_5c82de2d2e21a841dd06ec27e082777e_1200x1600_5c82de2d2e21a841dd06ec27e082777e" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/_160avzio4s__ac_uf1000_1000_ql80_" />

                </LinearLayout>


            </HorizontalScrollView>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/friendsFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="20dp"
            app:layout_constraintBottom_toTopOf="@+id/reviewFrameLayout"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:text="Hens vänner:"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="141dp" />


            <HorizontalScrollView
                android:id="@+id/friendScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <ImageView
                                android:id="@+id/imageButton20"
                                android:layout_width="75dp"
                                android:layout_height="71dp"
                                app:srcCompat="@drawable/baseline_personprofil_24"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:text="Användare"
                                android:textAlignment="center" />
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">




                            <ImageView
                                android:id="@+id/imageButton12"
                                android:layout_width="75dp"
                                android:layout_height="71dp"
                                app:srcCompat="@drawable/baseline_personprofil_24"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:text="Arg pappa"
                                android:textAlignment="center" />
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">




                            <ImageView
                                android:id="@+id/imageButton21"
                                android:layout_width="75dp"
                                android:layout_height="71dp"
                                app:srcCompat="@drawable/baseline_personprofil_24"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:text="Mikes 2"
                                android:textAlignment="center" />
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">




                            <ImageView
                                android:id="@+id/imageButton22"
                                android:layout_width="75dp"
                                android:layout_height="71dp"
                                app:srcCompat="@drawable/baseline_personprofil_24"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:text="GamerBoy2"
                                android:textAlignment="center" />
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">




                            <ImageView
                                android:id="@+id/imageButton23"
                                android:layout_width="75dp"
                                android:layout_height="71dp"
                                app:srcCompat="@drawable/baseline_personprofil_24"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:text="Den Emil"
                                android:textAlignment="center" />
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">




                            <ImageView
                                android:id="@+id/imageButton24"
                                android:layout_width="75dp"
                                android:layout_height="71dp"
                                app:srcCompat="@drawable/baseline_personprofil_24"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"


                                android:text="Harambe"
                                android:textAlignment="center" />
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/reviewFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:text="Hens omdömen:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/reviewScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    tools:ignore="ExtraText">

                    android:orientation="horizontal">>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="93dp"
                        android:layout_height="59dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/liesofp_1702510493314"
                        tools:layout_editor_absoluteY="556dp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="93dp"
                        android:layout_height="59dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ofmeaw2khrdaezajw1f3tcixbogklptc"
                        tools:layout_editor_absoluteX="150dp"
                        tools:layout_editor_absoluteY="556dp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="93dp"
                        android:layout_height="59dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/header1"
                        tools:layout_editor_absoluteX="318dp"
                        tools:layout_editor_absoluteY="556dp" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="93dp"
                        android:layout_height="59dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/egs_ittakestwo_hazelight_s2_1200x1600_5c82de2d2e21a841dd06ec27e082777e_1200x1600_5c82de2d2e21a841dd06ec27e082777e"
                        tools:layout_editor_absoluteY="556dp" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="93dp"
                        android:layout_height="59dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/_160avzio4s__ac_uf1000_1000_ql80_"
                        tools:layout_editor_absoluteY="556dp" />


                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/goBackFriends4"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tvActivity"
        android:layout_width="196dp"
        android:layout_height="78dp"
        android:layout_marginTop="80dp"
        android:drawableTop="@drawable/baseline_personprofil_24"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Yes Man"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>